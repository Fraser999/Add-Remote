{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clippy",
            "command": "cargo clippy --all-targets",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "presentation": {
                "panel": "new"
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Test",
            "command": "cargo test -- --nocapture --color=always",
            "group": "test",
            "type": "shell",
            "presentation": {
                "panel": "new"
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Run Release",
            "command": "cargo run --release -- --help",
            "group": "test",
            "type": "shell",
            "presentation": {
                "panel": "new"
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Run Debug",
            "command": "cargo run -- --help",
            "group": "test",
            "type": "shell",
            "presentation": {
                "panel": "new"
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Update",
            "command": "cargo update",
            "group": "build",
            "type": "shell",
            "presentation": {
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "command": "cargo clean",
            "group": "build",
            "type": "shell",
            "presentation": {
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}
